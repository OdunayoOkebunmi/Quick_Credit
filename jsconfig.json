{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@Images/*": [
        "src/components/images/*"
      ],
      "@Common/*": [
        "src/components/common/*"
      ],
      "@Layouts/*": [
        "src/components/layouts/*"
      ],
      "@Pages/*": [
        "src/components/layouts/pages/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}